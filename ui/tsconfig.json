{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "alwaysStrict": true,
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "lib": ["es2015", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  }
}
