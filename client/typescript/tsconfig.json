{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015", "es2015.promise"],
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "sourceMap": true,
    "declaration": true
  },
  "exclude": [
    "dist",
    "test",
    "node_modules",
    "webpack.common.ts",
    "webpack.dev.ts",
    "webpack.prod.ts",
    "webpack.test.ts"
  ]
}

