{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["ES2015"],
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "lib/**/*",
    "test/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "webpack.common.ts",
    "webpack.dev.ts",
    "webpack.prod.ts"
  ]
}

